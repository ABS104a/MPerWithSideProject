<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal" >
    
    <!-- コントローラーのレイアウト -->

	<!-- Playボタン -->

    <ImageButton
        android:id="@+id/button_play"
        android:layout_width="@dimen/play_button_size"
        android:layout_height="@dimen/play_button_size"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/controll_margin"
        android:layout_marginRight="@dimen/controll_margin"
        android:background="@drawable/button_circle_xml"
        android:paddingLeft="@dimen/play_button_left_padding"
        android:src="@drawable/play" />

    <!-- 戻るボタン -->

    <ImageButton
        android:id="@+id/button_back_seek"
        android:layout_width="@dimen/controll_button_size"
        android:layout_height="@dimen/controll_button_size"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/controll_margin"
        android:layout_marginRight="@dimen/controll_margin"
        android:background="@drawable/button_circle_xml"
        android:src="@drawable/previous" />

    <!-- 進むボタン -->

    <ImageButton
        android:id="@+id/button_next_seek"
        android:layout_width="@dimen/controll_button_size"
        android:layout_height="@dimen/controll_button_size"
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/controll_margin"
        android:background="@drawable/button_circle_xml"
        android:src="@drawable/next" />

    <!-- リピートボタン -->

    <ImageButton
        android:id="@+id/button_repeat"
        android:layout_width="@dimen/controll_other_button_size"
        android:layout_height="@dimen/controll_other_button_size"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/controll_margin"
        android:layout_marginRight="@dimen/controll_margin"
        android:background="@drawable/button_circle_white_xml"
        android:src="@drawable/not_repeat" />
    
	<!-- シャッフルボタン -->

    <ImageButton
        android:id="@+id/button_shuffle"
        android:layout_width="@dimen/controll_other_button_size"
        android:layout_height="@dimen/controll_other_button_size"
        android:layout_gravity="bottom"
        android:layout_marginRight="@dimen/controll_margin"
        android:background="@drawable/button_circle_white_xml"
        android:src="@drawable/shuffle" />

    <ImageButton
        android:id="@+id/imageButton_share"
        android:layout_width="@dimen/controll_other_button_size"
        android:layout_height="@dimen/controll_other_button_size"
        android:layout_gravity="bottom"
        android:background="@drawable/button_circle_xml"
        android:src="@drawable/twitter_logo_white" />

</LinearLayout>
