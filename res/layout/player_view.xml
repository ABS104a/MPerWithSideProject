<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- プレイヤー部分のMainレイアウト -->


    <!-- リスト部分のレイアウト -->

    <include
        android:id="@+id/player_list_part"
        android:layout_width="@dimen/player_view_width"
        android:layout_height="300dp"
        android:layout_margin="@dimen/music_player_margins"
        layout="@layout/part_of_player_list" />

    <!-- 曲検索ボックス部分のレイアウト -->

    <include
        android:id="@+id/search_box"
        android:layout_width="@dimen/player_view_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/music_player_margins"
        layout="@layout/part_of_search_box"
        android:visibility="gone" />

    <!-- 曲情報表示部分のレイアウト -->

    <include
        android:id="@+id/player"
        android:layout_width="@dimen/player_view_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/music_player_margins"
        android:layout_marginTop="@dimen/music_player_margins"
        android:layout_marginRight="@dimen/music_player_margins"
        layout="@layout/part_of_player" />

    <!-- コントローラ部分のレイアウト -->

    <include
        android:id="@+id/player_controll"
        android:layout_width="@dimen/player_view_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/music_player_margins"
        android:layout_marginRight="@dimen/music_player_margins"
        android:layout_marginBottom="@dimen/music_player_margins"
        layout="@layout/part_of_player_countroll" />

    <!-- 設定部分のレイアウト -->

    <include
        android:id="@+id/player_settings"
        android:layout_width="@dimen/player_view_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/music_player_margins"
        layout="@layout/part_of_player_settings" />

</LinearLayout>