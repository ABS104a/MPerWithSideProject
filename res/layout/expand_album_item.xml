<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/imageButton_expand_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/imageButton_expand_down"
        android:layout_width="@dimen/expand_item_size"
        android:layout_height="@dimen/expand_item_size"
        android:background="@android:drawable/stat_sys_download_done" />

    <ImageButton
        android:id="@+id/imageButton_expand_up"
        android:layout_width="@dimen/expand_item_size"
        android:layout_height="@dimen/expand_item_size"
        android:background="@android:drawable/stat_sys_upload" />

    <ImageButton
        android:id="@+id/imageButton_expand_delete"
        android:layout_width="@dimen/expand_item_size"
        android:layout_height="@dimen/expand_item_size"
        android:background="@android:drawable/ic_delete" />

</LinearLayout>
